<Window x:Name="ChelpWindow" x:Class="ChelpApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChelpApp"
        mc:Ignorable="d"
        Title="Chelp" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Background="White" Opacity="0.995" Loaded="ChelpWindow_Loaded" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Height="760" Width="1263" MaxWidth="1263" MaxHeight="765">
    <Grid x:Name="GLOBAL" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform X="0"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="273*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*"/>
            <ColumnDefinition Width="389*"/>
            <ColumnDefinition Width="567*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="group_ProjectSetup" Header="Настройка проекта" Foreground="Black" BorderBrush="Black" Margin="10,0,10,10">
            <Grid x:Name="grid_ProjectSetup" Height="482" Margin="0,0,-12,0" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel x:Name="stackpanel_ProjectSetup" Height="468" Margin="0,0,10,-24" VerticalAlignment="Top">
                    <Label Content="Укажите путь к папке, где лежат .cpp файлы:&#xD;&#xA;" HorizontalAlignment="Left" FontSize="11" Height="24"/>
                    <Grid x:Name="grid_ProjectPathSelection" Height="33">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26*"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="196*"/>
                            <ColumnDefinition Width="113*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="textbox_ProjectPath" TextWrapping="Wrap" Margin="10,3,0,10" IsEnabled="True" VerticalAlignment="Top" Height="18" Grid.ColumnSpan="3" ToolTip="" TextChanged="textbox_ProjectPath_TextChanged"/>
                        <Button x:Name="button_ProjectPathChoice" Content="Найти..." Margin="10,3,10,0" Cursor="Hand" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Grid.IsSharedSizeScope="True" VerticalAlignment="Top" Height="18" Click="ProjectPathChoiceButton_Click" Grid.Column="3" MinWidth="30"/>
                    </Grid>
                    <ListBox x:Name="listbox_ListOfCpp" VerticalContentAlignment="Top" Margin="10,0,10,0" MaxHeight="370" MinHeight="30" Height="97" Background="#FFEFEFEF">
                        <CheckBox x:Name="checkbox_SelectAll" Content="Выбрать все" IsChecked="False" Click="checkbox_SelectAll_Click" Height="21" Width="88" VerticalContentAlignment="Center" IsEnabled="False"/>
                    </ListBox>
                    <Label x:Name="label_noCppFiles" Content="В папке нет .cpp файлов!" HorizontalContentAlignment="Center" FontSize="16" Opacity="0.3" Padding="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="group_Compilers" Header="Компиляторы" Grid.Column="1" Margin="10,0,10,10" Foreground="Black" BorderBrush="Black">
            <Grid x:Name="grid_Compilers">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45*"/>
                    <RowDefinition Height="401*"/>
                    <RowDefinition Height="67*"/>
                </Grid.RowDefinitions>
                <ProgressBar x:Name="pb_CompilersSearchingAndTesting" Margin="10,10,10,10" Value="100" UseLayoutRounding="False" HorizontalContentAlignment="Stretch" IsIndeterminate="True" Background="#FFE6E6E6"/>
                <Label x:Name="label_CompilerStatus" Content="Поиск и тестирование компиляторов..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"/>
                <Button x:Name="button_RefreshCompilers" Content="Обновить" Grid.Row="2" Margin="40,15,40,15" Click="button_RefreshCompilers_Click" HorizontalContentAlignment="Center" FontSize="14"/>
                <Border BorderBrush="#FFB9B9B9" BorderThickness="1" Grid.Row="1" Margin="5,0,5,0" CornerRadius="5,5,5,5">
                    <StackPanel x:Name="sp_CompilerList">
                        <Label Content="Компиляторы, найденные на Вашем компьютере:" FontSize="14" Background="{x:Null}"/>
                    </StackPanel>
                </Border>



            </Grid>
        </GroupBox>
        <GroupBox x:Name="group_Debug" Header="Отладка" Margin="10,561,10,10" Grid.ColumnSpan="3" BorderBrush="Black" Foreground="Black" Grid.RowSpan="2">
            <Grid x:Name="grid_Debug" Width="1181" Margin="0,0,-2,0" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="199*"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="grid_DebugControlPanel" Width="184" HorizontalAlignment="Left" MinWidth="184">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37*"/>
                        <RowDefinition Height="37*"/>
                        <RowDefinition Height="37*"/>
                        <RowDefinition Height="37*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="button_ResetCache" Content="Сбросить кэш компиляторов" Margin="10,0,10,0" Click="button_ResetCache_Click" VerticalAlignment="Center"/>
                    <Button x:Name="button_OpenCacheInExplorer" Content="Открыть кэш в проводнике" Margin="10,0,10,0" Grid.Row="1" Click="button_OpenCacheInExplorer_Click" VerticalAlignment="Center"/>
                    <Button x:Name="button_OpenLog" Content="Открыть log.txt" Grid.Row="2" Margin="10,0,10,0" VerticalAlignment="Center" Click="button_OpenLog_Click"/>
                    <Button x:Name="button_ResetLog" Content="Очистить log.txt" Grid.Row="3" Margin="10,7,10,0" VerticalAlignment="Top" Click="button_ResetLog_Click"/>
                </Grid>
                <Grid Margin="184,0,0,0" MaxHeight="145.541546961326">
                    <Border BorderBrush="#FFB9B9B9" BorderThickness="1" CornerRadius="5,5,5,5" Panel.ZIndex="1" UseLayoutRounding="False" ClipToBounds="True" Margin="0,5,5,-2">
                        <TextBox x:Name="textbox_Debug" TextWrapping="NoWrap" IsReadOnly="True" AcceptsReturn="True" VerticalContentAlignment="Stretch" BorderThickness="0,0,0,0" AllowDrop="False" UseLayoutRounding="False" VerticalScrollBarVisibility="Auto" Margin="0,4,0,4" MinHeight="125.541546961326"/>
                    </Border>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="2" Header="Компиляция" Margin="10,0,10,10" BorderBrush="Black" Foreground="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="106*"/>
                    <ColumnDefinition Width="251*"/>
                    <ColumnDefinition Width="126*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="53*"/>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="370*"/>
                    <RowDefinition Height="67*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0,0,0,6" Grid.ColumnSpan="3">
                    <Label Content="Аргументы для компилятора: (можно оставить поле пустым)" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                    <TextBox x:Name="textbox_CompilerArgs" TextWrapping="Wrap" TextChanged="textbox_CompilerArgs_TextChanged"/>
                </StackPanel>
                <Label Content="Путь до .exe:" FontSize="14" VerticalContentAlignment="Center" Margin="0,2,0,4" Grid.Row="1" HorizontalAlignment="Center" Width="106"/>
                <Button x:Name="button_OpenCompiledInExplorer" Content="Открыть в проводнике" Grid.Row="1" FontSize="11" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="19" Grid.Column="2" HorizontalAlignment="Center" Width="120" Click="button_OpenCompiledInExplorer_Click"/>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,2,0,5">
                    <Label Content="Вывод программы:" Margin="10,0,0,0" FontSize="16"/>
                    <Border BorderBrush="Black" BorderThickness="1" MinHeight="100" CornerRadius="5,5,5,5" Height="292">
                        <TextBox x:Name="textbox_ProgramOutput" TextWrapping="Wrap" BorderThickness="0,0,0,0" Margin="0,9,0,9" IsReadOnly="True"/>
                    </Border>
                    <Grid Height="38" Margin="0,0,1,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="98*"/>
                            <ColumnDefinition Width="166*"/>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="149*"/>
                            <ColumnDefinition Width="105*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Статус:" FontSize="20"/>
                        <Label x:Name="label_ProgramStatus" FontSize="20" UseLayoutRounding="False" HorizontalContentAlignment="Right" HorizontalAlignment="Right" ScrollViewer.CanContentScroll="True" Grid.Column="1"/>
                        <Label Content="Код выхода:" Grid.Column="3" FontSize="20" Grid.ColumnSpan="2"/>
                        <Label x:Name="label_ProgramExitCode" Content="" Grid.Column="4" HorizontalAlignment="Right" FontSize="20" Margin="77,0,0,0" HorizontalContentAlignment="Right" FontWeight="Bold"/>
                        <Label Grid.Column="2" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Height="36" Width="14" Padding="4,0,0,0" Background="Black" Margin="6,6,6,6"/>
                    </Grid>
                </StackPanel>
                <Button x:Name="button_CompileAndRun" Content="Выполнить" Grid.ColumnSpan="3" Grid.Row="3" Margin="40,15,40,15" Click="button_CompileAndRun_Click" FontSize="14"/>
                <TextBox x:Name="textbox_CompiledFilePath" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Margin="5,5,5,5" IsReadOnly="True" MaxLines="1" HorizontalScrollBarVisibility="Auto" Background="White"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
